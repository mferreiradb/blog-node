<%- include('../../partials/head.ejs') %>

    <body>
        <%- include('../../partials/navbarHome.ejs') %>

            <div class="container">
                <main>
                    <% result.articles.rows.forEach((article)=> { %>

                        <div class="card mb-4">
                            <div class="card-header">
                                <%= article.title %>
                            </div>
                            <div class="card-body">
                                <a href="/<%= article.slug %>"><button class="btn-primary">Ler artigo</button></a>
                            </div>
                        </div>
                    <% }) %>
                </main>

                <div class="row">
                    <div class="col col-22">

                        <% if (result.page > 2) { %>
                            <a style="float: left" href="/articles/page/<%= result.page - 1 %>"><button class="btn-primary mb-4">Anterior</button></a>
                        <% } else if (result.page == 2) { %>
                            <a style="float: left" href="/"><button class="btn-primary mb-4">Anterior</button></a>
                        <% } %>
                    </div>
                    <div class="col col-22">
                        <% if (result.next) { %>
                            <a style="float: right" href="/articles/page/<%= result.page + 1 %>"><button class="btn-primary mb-4">Pr√≥ximo</button></a>
                        <% } %>
                    </div>
                </div>
            </div>
    </body>

<%- include('../../partials/scripts.ejs') %>